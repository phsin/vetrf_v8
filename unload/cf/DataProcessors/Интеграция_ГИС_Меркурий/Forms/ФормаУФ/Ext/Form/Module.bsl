			Попытка
				НоваяСтрока.ПолеСортировки = кб99_ВСД_Запросы.ДатаXML(стрНужныеПартии.СерияНоменклатуры.ГоденДо);
			Исключение
			КонецПопытки;
			НоваяСтрока.Количество = 0; 			
		КонецЕсли;
	КонецЦикла;
	РаспределенныеПартии.Сортировать("Документ, Номенклатура, Продукция_Элемент, ТермическиеУсловияПеревозки");
