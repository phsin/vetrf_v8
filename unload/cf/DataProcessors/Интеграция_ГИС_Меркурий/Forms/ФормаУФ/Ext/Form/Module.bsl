Функция НайтиНезавершенноеПроизводство()
	
	МассивДокументовНезавершенноеПроизводство = Новый Массив;
	
	Результат = Новый Структура;
	Результат.Вставить("ОформитьНовоеПроизводство", Ложь);
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ВСД2_Производство.operationId КАК operationId,
	|	ВСД2_Производство.Ссылка КАК ДокСсылка
	|ИЗ
	|	Документ.ВСД2_Производство КАК ВСД2_Производство
	|ГДЕ
	|	НЕ ВСД2_Производство.ПометкаУдаления
	|	И НЕ ВСД2_Производство.ЗавершитьОперацию
	|	И ВСД2_Производство.Проведен";
	Выборка = Запрос.Выполнить().Выбрать();
	
	Пока Выборка.Следующий() Цикл
		нСтр = Новый Структура;
		нСтр.Вставить("Документ", Выборка.ДокСсылка);
		нСтр.Вставить("НомерНезавершенногоПроизводства", Выборка.operationId);
		МассивДокументовНезавершенноеПроизводство.Добавить(нСтр)
	КонецЦикла;
	
	Если МассивДокументовНезавершенноеПроизводство.Количество() = 0 Тогда
		
		Результат.ОформитьНовоеПроизводство = Истина;
		
	КонецЕсли;
	
	Результат.Вставить( "МассивДокументовНезавершенноеПроизводство", МассивДокументовНезавершенноеПроизводство );
	
	Возврат Результат;
	
КонецФункции

