&НаСервере
Процедура ЗаполнитьПоРеквизитуАртикул(ВыбРеквизит)
	
	ТЗ = Объект.Соответствия.Выгрузить();
	
	Запрос = Новый Запрос;
	ТекстЗапроса =
		"ВЫБРАТЬ
		//|	тзСоответствия.Номенклатура КАК Номенклатура1,
		//|	тзСоответствия.Продукция_Элемент КАК Продукция_Элемент,
		|	тзСоответствия.Артикул КАК Артикул
		//|	тзСоответствия.GTIN КАК GTIN,
		//|	тзСоответствия.Производитель КАК Производитель,
		//|	тзСоответствия.Записано КАК Записано
		|ПОМЕСТИТЬ втСоответствие
		|ИЗ
		|	&ТЗ КАК тзСоответствия
		|ГДЕ
		|	НЕ тзСоответствия.Артикул ПОДОБНО """"
		|	И тзСоответствия.Записано = ЛОЖЬ
		|
		|ИНДЕКСИРОВАТЬ ПО
		|	Артикул
		|;
		|
		|////////////////////////////////////////////////////////////////////////////////
		|ВЫБРАТЬ
		//|	втСоответствие.Номенклатура1 КАК Номенклатура1,
		|	Номенклатура.Ссылка КАК Номенклатура,
		//|	втСоответствие.Продукция_Элемент КАК Продукция_Элемент,
		|	втСоответствие.Артикул КАК Артикул
		//|	втСоответствие.GTIN КАК GTIN,
		//|	втСоответствие.Производитель КАК Производитель,
		//|	втСоответствие.Записано КАК Записано
		|ИЗ
		|	втСоответствие КАК втСоответствие
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.Номенклатура КАК Номенклатура
		|		ПО втСоответствие.Артикул = Номенклатура.%Артикул%
		|ГДЕ
		|	Номенклатура.Ссылка <> ЗНАЧЕНИЕ(Справочник.Номенклатура.ПустаяСсылка)";
	Запрос.УстановитьПараметр("ТЗ", ТЗ);
	
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "%Артикул%", ВыбРеквизит);
	Запрос.Текст = ТекстЗапроса;
	
	Попытка
		
		Выборка = Запрос.Выполнить().Выбрать();
		Пока Выборка.Следующий() Цикл
			
			Отбор = Новый Структура;
			Отбор.Вставить("Артикул", Выборка.Артикул);
			
			НайденныеСтроки = ТЗ.НайтиСтроки(Отбор);
			
			НайденнаяСтрока = НайденныеСтроки[0];
			НайденнаяСтрока.Номенклатура = Выборка.Номенклатура;
			
		КонецЦикла;
		
		Объект.Соответствия.Загрузить(ТЗ);
		
	Исключение
		
		кб99_ВСД.СообщитьПользователю(НСтр("ru = 'Ошибка, реквизит не найден в базе данных'"),, "ИмяРеквизитаАртикул");
		ЗаписьЖурналаРегистрации(НСтр("ru = 'Выполнение операции - Найти по артикулу'"),
			УровеньЖурналаРегистрации.Ошибка,,,
			ОбработкаОшибок.ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
			
	КонецПопытки;
	
КонецПроцедуры

